  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "test",
        "--",
        "--timeout",
        "999999",
        "--colors"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "env": {
        "DEBUG": "fastboot-pool,flatten"
      },
    }
  ]
}
